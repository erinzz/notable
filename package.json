
{
  "name": "notes-app",
  "version": "1.0.0",
  "description": "A simple note-taking application with Node.js, Express, PostgreSQL, and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "dev:client": "webpack --watch --mode development",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "node dist/server.js"
  },
  "keywords": ["notes", "express", "postgresql", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.0.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
